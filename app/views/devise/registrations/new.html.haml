.container.login-wrapper
  .login-img
    %img{:src => "/images/logo-large.png"}/
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .input-group
      = f.text_field :first_name, autofocus: true, placeholder: 'First Name', class: 'form-control', required: true
    .input-group
      = f.text_field :last_name, autofocus: true, placeholder: 'Last Name', class: 'form-control', required: true
    .input-group
      %span#basic-addon1.input-group-addon
        %span.glyphicon.glyphicon-envelope
      = f.email_field :email, autofocus: true, class: 'form-control'
    .input-group
      %span#basic-addon1.input-group-addon
        %span.glyphicon.glyphicon-lock
      = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "6 characters minimum"
    .input-group
      %span#basic-addon1.input-group-addon
        %span.glyphicon.glyphicon-lock
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "confirm password"
    .actions
      = f.submit "Sign up", class: 'btn btn-default'
  = render "devise/shared/links"
